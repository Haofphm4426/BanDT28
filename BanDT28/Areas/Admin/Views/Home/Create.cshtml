@model BanDT28.Models.Sanpham

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm sản phẩm mới</h2>

@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <h6>Tên sản phẩm</h6>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tensp, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tensp, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h6>Giá tiền</h6>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Giatien, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Giatien, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h6>Số lượng</h6>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Soluong, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Soluong, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h6>Mô tả</h6>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h6>Thẻ sim</h6>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Thesim, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Thesim, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h6>Bộ nhớ trong</h6>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Bonhotrong, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Bonhotrong, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h6>Sản phẩm mới</h6>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Sanphammoi, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Sanphammoi, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ram, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ram, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ram, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h6>Ảnh bìa</h6>
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.Anhbia, new { htmlAttributes = new { @class = "form-control" } })*@
            <input type="file" name="fileAnh" id="fileAnh" />
            @Html.ValidationMessageFor(model => model.Anhbia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h6>Hãng</h6>
        <div class="col-md-10">
            @*@Html.DropDownList("MH", null, htmlAttributes: new { @class = "form-control" })*@
            @{ BanDT28.Models.QLdienthoaiEntities db = new BanDT28.Models.QLdienthoaiEntities();
                var hangs = db.Hangsanxuats.ToList();
                <select class="form-control" name="Mahang">
                    @foreach (var item in hangs)
                    {
                        <option value="@item.Mahang">@item.Tenhang</option>
                    }

                </select> 
            }
            @Html.ValidationMessageFor(model => model.Mahang, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h6>Hệ điều hành</h6>
        <div class="col-md-10">
            @*@Html.DropDownList("MHDH", null, htmlAttributes: new { @class = "form-control" })*@
            @{
                var hdhs = db.Hedieuhanhs.ToList();
                <select class = "form-control" name="Mahdh">
                    @foreach(var item in hdhs)
                    {
                        <option value="@item.Mahdh">@item.Tenhdh</option>
                    }
                        
                </select>
            }
            @Html.ValidationMessageFor(model => model.Mahdh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Về trang chủ", "Index")
</div>
