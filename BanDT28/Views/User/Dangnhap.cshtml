@model BanDT28.Models.Nguoidung

@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hãy đăng nhập để sử dụng đầy đủ tính năng của Website</h2>

@using (Html.BeginForm("Dangnhap", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    <div class="form-group">
        <h5 class="control-label col-md-2" style="font-weight: bold; margin: 0">Tên đăng nhập</h5>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <h5 class="control-label col-md-2" style="font-weight: bold; margin: 0">Mật khẩu</h5>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Matkhau, new { htmlAttributes = new { type = "Password", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Đăng nhập" class="btn btn-default" />
        </div>
    </div>
</div>
}
@ViewBag.Fail

