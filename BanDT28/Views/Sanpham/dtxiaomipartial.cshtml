
<div class="row row_custom" style="margin-top: 20px">
    <div style="width: 100px; border-bottom: 2px solid #fe5d02">
        <a href="@Url.Action("danhsach", new {Mahang=3 })" style="font-size: 18px; font-weight: bold; color: #fe5d02"> XIAOMI </a>
    </div>
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6 col_custom" style="margin-top: 10px">
            <a class="dt_custom" href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">
                <img src=@Url.Content("~/HinhanhSP/" + item.Anhbia) class="img-responsive img_custom" alt="" style="width: 100%; height: 260px" />
                <div style="display: flex; flex-direction: column; justify-content: space-around; align-items: center">
                    <h3 style="margin-top: 20px; font-size: 18px; color: black">@item.Tensp</h3>
                    <h3 style="color:red; font-weight: bold;">@String.Format("{0:0,0}", item.Giatien) VNĐ</h3>
                    <br />
                    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                    {
                        <input type="submit" value="Mua hàng" id="bgnGioHang" style="font-size: 18px; color: black; " />
                    }
                </div>
            </a>
        </div>
    }
</div>


